<Window x:Class="HospitalD.AdminPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalD"
        mc:Ignorable="d"
        Title="AdminPage" Height="450" Width="800">
    <Grid Style="{StaticResource PageBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Приветствие -->
        <TextBlock Grid.Row="0" Text="Добро пожаловать в административную панель!" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="24" FontWeight="Bold" Foreground="DarkBlue" Margin="0,20"/>

        <!-- Кнопки для перехода на другие страницы -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Отделения" Style="{StaticResource CustomButtonStyle}" Click="Departments_Click"/>
            <Button Content="Персонал" Style="{StaticResource CustomButtonStyle}" Click="Staff_Click"/>
            <Button Content="Пациенты" Style="{StaticResource CustomButtonStyle}" Click="Patients_Click"/>
            <Button Content="Диагнозы" Style="{StaticResource CustomButtonStyle}" Click="Diagnoses_Click"/>
            <Button Content="Медицинские процедуры" Style="{StaticResource CustomButtonStyle}" Click="MedicalProcedures_Click" />
            <Button Content="Лекарства" Style="{StaticResource CustomButtonStyle}" Click="Medications_Click"/>
        </StackPanel>

        <!-- Фрейм для отображения других страниц -->
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
